<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Order Details</h2>
    <a href="/orders" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Back to Orders
    </a>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Order #<%= order.orderNumber %></h5>
        </div>
        <div class="card-body">
          <div class="row mb-4">
            <div class="col-md-6">
              <strong>Order Date:</strong><br>
              <%= order.createdAt.toLocaleDateString() %> at <%= order.createdAt.toLocaleTimeString() %>
            </div>
            <div class="col-md-6">
              <strong>Status:</strong><br>
              <span class="badge bg-<%= order.status === 'paid' ? 'success' : order.status === 'pending' ? 'warning' : 'info' %> fs-6">
                <%= order.status.toUpperCase() %>
              </span>
            </div>
          </div>

          <!-- Order Items -->
          <h6>Items Ordered:</h6>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Book</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% order.items.forEach(item => { %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <% if (item.book && item.book.image) { %>
                          <img src="<%= item.book.image %>" alt="<%= item.title %>" 
                               class="me-3 rounded" style="width: 70px; height: 90px; object-fit: cover;">
                        <% } %>
                        <div>
                          <strong><%= item.title %></strong><br>
                          <small class="text-muted">by <%= item.author %></small><br>
                          <% if (item.book && item.book.genre) { %>
                            <span class="badge bg-secondary small"><%= item.book.genre %></span>
                          <% } %>
                        </div>
                      </div>
                    </td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td><%= item.quantity %></td>
                    <td><strong>$<%= (item.price * item.quantity).toFixed(2) %></strong></td>
                  </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr>
                  <th colspan="3" class="text-end">Total:</th>
                  <th>$<%= order.totalAmount.toFixed(2) %></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <!-- Order Summary -->
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Order Summary</h6>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal:</span>
            <span>$<%= order.totalAmount.toFixed(2) %></span>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>Shipping:</span>
            <span class="text-success">FREE</span>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>Tax:</span>
            <span>$0.00</span>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <strong>Total:</strong>
            <strong>$<%= order.totalAmount.toFixed(2) %></strong>
          </div>
        </div>
      </div>

      <!-- Shipping Address -->
      <% if (order.shippingAddress) { %>
        <div class="card mt-3">
          <div class="card-header">
            <h6 class="mb-0">Shipping Address</h6>
          </div>
          <div class="card-body">
            <strong><%= order.shippingAddress.fullName %></strong><br>
            <%= order.shippingAddress.address %><br>
            <%= order.shippingAddress.city %>, <%= order.shippingAddress.postalCode %><br>
            <%= order.shippingAddress.country %>
          </div>
        </div>
      <% } %>

      <!-- Payment Information -->
      <% if (order.paymentInfo) { %>
        <div class="card mt-3">
          <div class="card-header">
            <h6 class="mb-0">Payment Information</h6>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between mb-2">
              <span>Method:</span>
              <span><%= order.paymentInfo.paymentMethod || 'Card' %></span>
            </div>
            <% if (order.paymentInfo.paidAt) { %>
              <div class="d-flex justify-content-between mb-2">
                <span>Paid At:</span>
                <span><%= order.paymentInfo.paidAt.toLocaleDateString() %></span>
              </div>
            <% } %>
            <div class="mt-2">
              <small class="text-muted">
                Transaction ID: <%= order.paymentInfo.stripePaymentIntentId %>
              </small>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Actions -->
      <div class="card mt-3">
        <div class="card-body">
          <div class="d-grid gap-2">
            <button onclick="window.print()" class="btn btn-outline-primary">
              <i class="bi bi-printer"></i> Print Order
            </button>
            <% if (order.status === 'paid' || order.status === 'processing') { %>
              <button class="btn btn-outline-info" disabled>
                <i class="bi bi-truck"></i> Track Shipment
              </button>
            <% } %>
            <a href="/books" class="btn btn-outline-success">
              <i class="bi bi-plus"></i> Order Again
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

<style>
@media print {
  .btn, .card-header {
    display: none !important;
  }
  .card {
    border: none !important;
    box-shadow: none !important;
  }
}
</style>
