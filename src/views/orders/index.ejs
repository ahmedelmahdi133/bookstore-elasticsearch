<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-bag-check"></i> My Orders</h2>
    <a href="/books" class="btn btn-outline-primary">
      <i class="bi bi-plus"></i> Shop More
    </a>
  </div>

  <% if (orders && orders.length > 0) { %>
    <% orders.forEach(order => { %>
      <div class="card mb-3">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col-md-3">
              <strong>Order #<%= order.orderNumber %></strong>
            </div>
            <div class="col-md-3">
              <small class="text-muted">
                Placed on <%= order.createdAt.toLocaleDateString() %>
              </small>
            </div>
            <div class="col-md-3">
              <span class="badge bg-<%= order.status === 'paid' ? 'success' : order.status === 'pending' ? 'warning' : 'info' %>">
                <%= order.status.toUpperCase() %>
              </span>
            </div>
            <div class="col-md-3 text-end">
              <strong>$<%= order.totalAmount.toFixed(2) %></strong>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-8">
              <h6>Items:</h6>
              <% order.items.slice(0, 3).forEach(item => { %>
                <div class="d-flex align-items-center mb-2">
                  <% if (item.book && item.book.image) { %>
                    <img src="<%= item.book.image %>" alt="<%= item.title %>" 
                         class="me-3 rounded" style="width: 60px; height: 80px; object-fit: cover;">
                  <% } %>
                  <div>
                    <strong><%= item.title %></strong><br>
                    <small class="text-muted">by <%= item.author %> • Qty: <%= item.quantity %> • $<%= item.price.toFixed(2) %></small>
                  </div>
                </div>
              <% }) %>
              <% if (order.items.length > 3) { %>
                <small class="text-muted">... and <%= order.items.length - 3 %> more items</small>
              <% } %>
            </div>
            <div class="col-md-4 text-end">
              <div class="d-grid gap-2">
                <a href="/orders/<%= order._id %>" class="btn btn-outline-primary btn-sm">
                  <i class="bi bi-eye"></i> View Details
                </a>
                <% if (order.status === 'paid' || order.status === 'processing') { %>
                  <button class="btn btn-outline-info btn-sm" disabled>
                    <i class="bi bi-truck"></i> Track Order
                  </button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="text-center py-5">
      <div class="display-1 text-muted mb-3">
        <i class="bi bi-bag-x"></i>
      </div>
      <h4>No Orders Yet</h4>
      <p class="text-muted">You haven't placed any orders yet. Start shopping to see your orders here!</p>
      <a href="/books" class="btn btn-primary btn-lg">
        <i class="bi bi-book"></i> Start Shopping
      </a>
    </div>
  <% } %>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
